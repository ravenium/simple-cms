include doctype
include header

body
	#header
		h1 simple-cms
		#page
			form(action="/", method="post") 
				label(for="id") Id
				input#id(type="text", name="id")
				label(for="name") Name
				input#name(type="text", name="name")
				input(type="submit")
		#errors
			a(href="/config") View the config
			
		div
			each item in data
				li(id="#{item.id}")
					a(href="/?id=#{item.id}") #{item.name}
